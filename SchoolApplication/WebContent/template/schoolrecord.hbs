      <div class="schoolrecord {{ifequalsinline model.done true "done"}}">
        <div class="display">
          <input class="check" type="checkbox" {{ifinline model.done "checked=\"checked\""}} />
          <div class="schoolrecord-content">{{model.content}}</div>
          <span class="schoolrecord-destroy"></span>
        </div>
        <div class="edit">
          <input class="schoolrecord-input" type="text" value="{{model.content}}" />
        </div>
      </div>
